<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Fechas disponibles - Supreme Garage</title>
  <style>
    body { font-family: sans-serif; padding: 20px; background: #f5f5f5; }
    .container { max-width: 500px; margin: auto; background: white; padding: 20px; border-radius: 12px; box-shadow: 0 0 10px rgba(0,0,0,0.1); }
    h1 { font-size: 22px; margin-bottom: 10px; }
    select, button { width: 100%; padding: 10px; margin: 10px 0; border-radius: 6px; border: 1px solid #ccc; }
    ul { list-style: none; padding: 0; }
    li { background: #e0ffe0; margin: 5px 0; padding: 8px; border-radius: 6px; }
    .error { color: red; margin-top: 10px; }
  </style>
</head>
<body>
  <div class="container">
    <h1>Consulta fechas disponibles</h1>

    <label for="servicio">Selecciona el tipo de servicio:</label>
    <select id="servicio">
      <option value="Lavado detallado">Lavado detallado</option>
      <option value="Encerado">Encerado</option>
      <option value="Wrapping">Wrapping</option>
      <option value="Cerámica">Cerámica</option>
    </select>

    <button onclick="consultarFechas()">Consultar fechas disponibles</button>

    <div id="resultado"></div>
  </div>

  <script>
    async function consultarFechas() {
      const servicio = document.getElementById('servicio').value;
      const resultado = document.getElementById('resultado');
      resultado.innerHTML = 'Consultando...';

      try {
        const res = await fetch('https://n8n.automatedflow.net/webhook/fechas-disponibles', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ servicio })
        });

        const data = await res.json();

        if (Array.isArray(data.fechasDisponibles)) {
          resultado.innerHTML = '<h3>Fechas disponibles:</h3>' +
            '<ul>' + data.fechasDisponibles.map(fecha => `<li>${fecha}</li>`).join('') + '</ul>';
        } else {
          resultado.innerHTML = '<p class="error">No se encontraron fechas disponibles.</p>';
        }
      } catch (err) {
        console.error(err);
        resultado.innerHTML = '<p class="error">Error al consultar fechas. Intenta nuevamente.</p>';
      }
    }
  </script>
</body>
</html>
